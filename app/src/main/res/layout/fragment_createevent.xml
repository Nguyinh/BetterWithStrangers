<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubiquasif.uqac.betterwithstrangers.Fragments.CreateEventFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            //Public/Privée
            <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public / Privée" />

            //Tags descriptif d'evenements
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tags, Mots clefs" />

            //date de l'evenement
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir la date"
                android:onClick="showDatePickerDialog" />


            //heure de l'evenement
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir l'heure"
                android:onClick="showTimePickerDialog" />

            //Lieu


        </LinearLayout>


    </ScrollView>

</FrameLayout>
