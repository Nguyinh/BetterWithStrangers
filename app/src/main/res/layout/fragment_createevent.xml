<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubiquasif.uqac.betterwithstrangers.Fragments.CreateEventFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            //Nom de la soirée

            <EditText
                android:id="@+id/nameEvent"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:ems="14"
                android:hint="NomDeVotreSuperSoirée"
                android:textSize="25dp"/>

            //Public/Privée
            <Switch
            android:id="@+id/switch1"
            android:layout_below="@id/nameEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public / Privée"
            android:textSize="18dp"/>

            //Tags descriptif d'evenements
            <EditText
                android:id="@+id/tags"
                android:layout_below="@id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tags, Mots clefs" />

            //date de l'evenement
            <TextView
                android:id="@+id/show_date"
                android:layout_below="@id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date choisie"
                android:textSize="18dp" />

            <Button
                android:id="@+id/picDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier Date"
                android:onClick="datePicker"
                android:layout_below="@id/tags"
                android:layout_alignParentRight="true"
                android:textSize="10dp"/>


            //heure de l'evenement
            <TextView
                android:id="@+id/show_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/picDate"
                android:text="Heure choisie :"
                android:textSize="18dp" />

            <Button
                android:id="@+id/picTime"
                android:layout_below="@id/picDate"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier l'heure"
                android:onClick="timePicker"
                android:textSize="10dp"/>

            //Lieu



            //Bouton de création de soirée
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/cardview_light_background"
                app:backgroundTint="@color/colorPrimary"
                android:src="@drawable/com_facebook_button_like_icon_selected"
                android:layout_margin="@dimen/fui_auth_method_button_margin"
                android:layout_below="@id/picTime"
                android:layout_alignParentRight="true"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="normal"/>
        </RelativeLayout>



    </ScrollView>



</FrameLayout>
